@{
	ViewBag.Title = "Fornecedores";
	ViewBag.Header = "Gerenciamento de Fornecedores";
}

<link href="~/simple-modules.css" rel="stylesheet" />

<main class="main-module animate__animated animate__zoomInDown">
	<a href="/fornecedores/cadastrar">
		<div class="card-module">
			<h1>Cadastrar</h1>
			<p>Cadastre novos fornecedores</p>
			<i class="fas fa-plus fa-beat card-icon"></i>
		</div>
	</a>

	<a href="/fornecedores/visualizar">
		<div class="card-module">
			<h1>Visualizar</h1>
			<p> Visualizar todos os fornecedores</p>
			<i class="fas fa-eye fa-flip card-icon" style="--fa-animation-duration: 3s;"></i>
		</div>
	</a>
</main>