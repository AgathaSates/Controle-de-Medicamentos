@{
	ViewBag.Title = "Requisição";
	ViewBag.Header = "Gerenciamento de Requisições";
}

<link href="~/simple-modules.css" rel="stylesheet" />

<main class="main-module animate__animated animate__zoomInDown">
	<a href="/requisicao/saida/cadastrar">
		<div class="card-module">
			<h1>Cadastrar</h1>
			<p>Cadastre novas Prescrições de Saida</p>
			<i class="fas fa-plus fa-beat card-icon"></i>
		</div>
	</a>

	<a href="/requisicao/visualizar">
		<div class="card-module">
			<h1>Visualizar</h1>
			<p>Visualizar todas as Prescrições de Saída</p>
			<i class="fas fa-eye fa-flip card-icon" style="--fa-animation-duration: 3s;"></i>
		</div>
	</a>
</main>
